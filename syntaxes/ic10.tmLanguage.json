{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ic10",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#functions_control"
		},
		{
			"include": "#functions_math"
		},
		{
			"include": "#functions_stack"
		},		
		{
			"include": "#numbers"
		},
		{
			"include": "#devices"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#flags"
		},
		{
			"include": "#jumps"
		},
		{
			"include": "#logic_type"
		},
		{
			"include": "#slot_type"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.operator.quantifier.regexp",
				"match": "\\b(alias|define|yield|sleep|HASH)\\b"
			}]
		},
		"commands": {
			"patterns": [{
				"name": "keyword.operator.quantifier.regexp",
				"match": "\\b(move|l|lr|ls|lb|lbn|lbns|lbs|s|ss|sb|sbn|sbs)\\b"
			}]
		},
		"functions_control": {
			"patterns": [{
				"name": "entity.name.scope-resolution",
				"match": "\\b(bap|bapal|bapz|bapzal|bdns|bdnsal|bdse|bdseal|beq|beqal|beqz|beqzal|bge|bgeal|bgez|bgezal|bgt|bgtal|bgtz|bgtzal|ble|bleal|blez|blezal|blt|bltal|bltz|bltzal|bna|bnaal|bnan|bnaz|bnazal|bne|bneal|bnez|bnezal|brap|brapz|brdns|brdse|breq|breqz|brge|brgez|brgt|brgtz|brle|brlez|brlt|brltz|brna|brnan|brnaz|brne|brnez|hcf|sap|sapz|sdns|sdse|select|seq|sge|sgez|sgt|sgtz|sle|slez|slt|sltz|sna|snan|snanz|snaz|sne|snez)\\b"
			}]
		},
		"functions_math": {
			"patterns": [{
				"name": "entity.name.scope-resolution",
				"match": "\\b(add|sub|mul|div|mod|trunc|sqrt|round|floor|exp|log|sla|sll|sra|srl|max|min|ceil|abs|rand|sin|cos|asin|acos|tan|atan|atan2|and|or|seqz|nor|xor|not)\\b"
			}]
		},
		"functions_stack": {
			"patterns": [{
				"name": "entity.name.scope-resolution",
				"match": "\\b(peek|push|pop)\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "meta.structure.dictionary.key.python",
				"match": "(-)?\\b(\\d+(\\.\\d+)?)\\b"
			}]
		},
		"devices": {
			"patterns": [{
				"name": "punctuation.definition.quote.begin.markdown",
				"match": "\\b(d[0-5]|db|Channel\\d{1}|Channel\\d{2)\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "punctuation.definition.list.begin.markdown",
				"match": "\\b(sp|r[a,\\d{1}]|r\\d{2})\\b"
			}]
		},
		"jumps": {
			"patterns": [{
				"name": "token.debug-token",
				"match": "^j(r|al)? ([\\w\\W]*$)?"
			}]
		},
		"flags": {
			"patterns": [{
				"name": "token.debug-token",
				"match": "^[^:]*:$"
			}]
		},
		"logic_type": {
			"patterns": [{
				"name": "meta.embedded.assembly",
				"match": "\\b(PositionX|PositionY|PositionZ|RatioNitrogen|RatioPollutant|RatioCarbonDioxide|RatioNitrousOxide|RatioVolatiles|RatioOxygen|NextWeatherEventTime|SettingInput|SettingOutput|TotalMoles|Pressure|Temperature|Power|Open|Mode|Lock|Setting|Maximum|Ratio|Quantity|On|RequiredPower|PrefabHash|ReferenceId|NameHash|Reagents|RecipeHash|PowerActual|PowerPotential|PowerGeneration|SizeX|SizeZ|SignalStrength|SignalID|Vertical|Activate|AirRelease|Bpm|Charge|ClearMemory|CollectableGoods|Color|Combustion|CombustionInput|CombustionLimiter|CombustionOutput|CombustionOutput2|CompletionRatio|ElevatorLevel|ElevatorSpeed|Error|ExportCount|Filtration|Flush|ForceWrite|Fuel|Harvest|Horizontal|Idle|ImportCount|InterrogationProgress|LineNumber)\\b"
			}]
		},
		"slot_type": {
			"patterns": [{
				"name": "meta.embedded.assembly",
				"match": "\\b(Occupied|OccupantHash|Quantity|Damage|Charge|ChargeRatio|Class|MaxQuantity|PrefabHash|SortingClass|ReferenceId)\\b"
			}]
		},
		"connection_type": {
			"patterns": [{
				"name": "keyword.other.unit",
				"match": "\\b(Connection|Power)\\b"
			}]
		},
		"comments": {
			"patterns": [
			  {
				"begin": "#",
				"beginCaptures": {
				  "0": {
					"name": "punctuation.definition.tag"
				  }
				},
				"end": "$",
				"name": "punctuation.definition.tag"
			  }
			]
		  }
	},
	"scopeName": "source.ic10"
}